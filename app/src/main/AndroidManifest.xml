<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="devilseye.android.timetracker" >

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AddRecordActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_add_record"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="devilseye.android.timetracker.MainActivity" />
        </activity>
        <activity
            android:name=".RecordActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_record"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="devilseye.android.timetracker.MainActivity" />
        </activity>
        <activity
            android:name=".CategoryActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_category"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="devilseye.android.timetracker.MainActivity" />
        </activity>
        <activity
            android:name=".StatsActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_stats"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="devilseye.android.timetracker.MainActivity" />
        </activity>
        <activity
            android:name=".DatePickersActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_date_pickers"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="devilseye.android.timetracker.MainActivity" />
        </activity>
        <activity
            android:name=".ChooseCategoriesActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_choose_categories" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="devilseye.android.timetracker.MainActivity" />
        </activity>
        <activity
            android:configChanges="orientation|screenSize"
            android:name="org.achartengine.GraphicalActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="devilseye.android.timetracker.MainActivity" />
        </activity>
    </application>
</manifest>
